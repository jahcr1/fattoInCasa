# Activar reescritura
RewriteEngine On
RewriteBase /

##############################################
# üîí 1. Bloquear archivos ocultos y sensibles
##############################################

# Archivos como .env, .gitignore, .htaccess
<FilesMatch "^\.">
  Require all denied
</FilesMatch>

# Archivos de configuraci√≥n que no deben ser accedidos nunca
<FilesMatch "^(composer\.json|composer\.lock|config\.php)$">
  Require all denied
</FilesMatch>

##############################################
# üîí 2. Bloquear carpetas internas
##############################################

RewriteRule ^vendor(/.*)?$ - [F,L]

##############################################
# üåê 5. Redirecci√≥n de HTTP a HTTPS
##############################################

RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

##############################################
# üöÄ 6. URL amigables (.php oculto)
##############################################

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

##############################################
# üîÅ 7. Rutas personalizadas
##############################################

DirectoryIndex index.php

RewriteRule ^admin$ panel.php [L]

